{
  "name": "thorchain-indexer",
  "version": "1.0.0",
  "description": "Indexador gen√©rico para THORChain usando plantillas YAML",
  "main": "dist/index.js",
  "scripts": {
    "indexer:build": "tsc",
    "indexer:start": "node dist/indexer/index.js",
    "indexer:dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/indexer/index.ts",
    "watch": "tsc -w",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate src/migrations/Migration -d src/data-source.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/data-source.ts",
    "api:dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/api/server.ts",
    "api:build": "tsc",
    "api:start": "node dist/api/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@xchainjs/xchain-thornode": "^0.3.22",
    "@xchainjs/xchain-util": "^1.0.8",
    "axios": "^1.6.7",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "node-cache": "^5.1.2",
    "oauth-1.0a": "^2.2.6",
    "pg": "^8.11.3",
    "typeorm": "^0.3.20",
    "winston": "^3.17.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.19",
    "axios-mock-adapter": "^2.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
